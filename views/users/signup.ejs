<% layout("/layouts/boilerplate")%>
<h2 class="col-4 offset-3">SignUp</h2>
<div class="row mt-3">
  <div class="col-4 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          id="username"
          name="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Username looks good!</div>
        <div class="invalid-feedback">Enter a Username</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          id="email"
          name="email"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          id="password"
          name="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
