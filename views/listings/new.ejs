<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create New Listing</h3>
    <form
      action="/listings"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          id="title"
          name="listing[title]"
          type="text"
          class="form-control"
          placeholder="Add a title"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Enter a title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="listing[description]"
          class="form-control"
          placeholder="What makes your listing special? "
          required
        ></textarea>
        <div class="valid-feedback">Description look good!</div>
        <div class="invalid-feedback">Please fill the description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          id="image"
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
        <div class="invalid-feedback">please choose a image</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-7">
          <label for="country" class="form-label">Country</label>
          <input
            id="country"
            name="listing[country]"
            type="text"
            class="form-control"
            placeholder="Enter your country"
            required
          />
          <div class="invalid-feedback">Please enter a valid country</div>
        </div>
        <div class="mb-3 col-md-5">
          <label for="price" class="form-label">Price</label>
          <input
            id="price"
            name="listing[price]"
            type="number"
            class="form-control"
            placeholder="How much do you charge per night?"
            required
          />
          <div class="invalid-feedback">Enter a valid price</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          id="location"
          name="listing[location]"
          type="text"
          class="form-control"
          placeholder="Add the location for your listing..."
          required
        />
        <div class="invalid-feedback">
          Enter a correct location for your listings
        </div>
      </div>

      <div class="mb-3 category">
        <label for="category" class="form-label">Category</label>
        <select id="category" name="listing[category]" required>
          <option value="trending">Trending</option>
          <option value="tiny rooms">Tiny Rooms</option>
          <option value="amazing views">Amazing Views</option>
          <option value="iconic cities">Iconic Cities</option>
          <option value="mountains">Mountains</option>
          <option value="beach">Beach</option>
          <option value="snow">Snow</option>
          <option value="amazing pools">Amazing Pools</option>
          <option value="desert">Desert</option>
          <option value="forest">Forest</option>
          <option value="city">City</option>
          <option value="village">Village</option>
          <option value="luxury">Luxury</option>
          <option value="castles">Castles</option>
          <option value="omg">OMG</option>
        </select>
      </div>

      <button class="btn add-btn">Add</button><br /><br /><br />
    </form>
  </div>
</div>
