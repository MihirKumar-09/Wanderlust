<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit listing</h3>
    <form
      method="POST"
      action="/listings/<%=listing._id%>/?_method=PUT"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          id="title"
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Enter a title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="listing[description]"
          class="form-control"
          required
        >
        <%= listing.description %></textarea
        >
        <div class="valid-feedback">Description look good!</div>
        <div class="invalid-feedback">Please fill the description</div>
      </div>

      <!-- Show the old image -->
      <div>
        <p>Old Image</p>
        <img src="<%=originalImageUrl%>" alt="Listing old image" />
      </div>
      <br />

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input name="listing[image]" type="file" class="form-control" />
      </div>

      <div class="row">
        <div class="col-7 mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            id="country"
            name="listing[country]"
            value="<%= listing.country %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid country</div>
        </div>

        <div class="col-5 mb-3">
          <label for="price" class="form-label">Price (â‚¹)</label>
          <input
            id="price"
            name="listing[price]"
            type="number"
            value="<%= listing.price %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid price</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          id="location"
          name="listing[location]"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Enter a correct location for your listings
        </div>
      </div>

      <button class="btn mt-3 edit-btn">Update Listing</button>
      <br /><br /><br />
    </form>
  </div>
</div>
